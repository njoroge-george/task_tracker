                            </div>
                            <div className="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                              <div
                                className="h-2 rounded-full transition-all"
                                style={{
                                  width: `${progress}%`,
                                  backgroundColor: project.color,
                                }}
                              ></div>
                            </div>
                          </div>
                        </Link>
                      );
